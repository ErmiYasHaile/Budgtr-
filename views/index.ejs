 <% let bankAccount= budget.reduce((additionalAmt,budget)=>{
  return additionalAmt + parseInt(budget.amount);
 },0)%>
<p>Balance: <%=bankAccount%></p>
 <% if (bankAccount < 0) { %>
  <style>
    p {
      color: red
    }
  </style>
<% } else if (bankAccount > 1000) { %>
    <style>
      p {
        color: blue
      }
    </style>

<% } %>



    <a href="/budgets/new">
      <button>NEW ITEM</button>
  </a>
    <table>
      <tr>
         <th>date</th><th>name</th><th>amount</th>
      </tr>
      <% for (let i = 0; i < budget.length; i++) { %>
       <tr>
         <td><%=budget[i].date %></td>
         <td><a href="/budgets/<%=i %> "><%=budget[i].name %> </a></td>
         
         <td><%=budget[i].amount %></td>
       </tr>    
      <% } %>
   </table>
  </body>
